page, .container {
  height: 100%;
  background-color: #fff;
}

.main {
  padding: 20rpx;
}

.image-container {
  position: relative;
  text-align: center;
}

.image-container image {
  width: 100%;
}

.face-result-item {
  position: absolute;
  border: 1px solid #1aad16;
}

.face-result-text {
  position: absolute;
  top: 100%;
  left: -1px;
  color: #fff;
  padding: 4rpx 16rpx;
  background: rgba(26, 173, 25, 0.5);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: center;
}

.face-result-text text {
  height: 36rpx;
  line-height: 36rpx;
  font-size: 22rpx;
}

.button-container {
  margin-top: 100rpx;
  text-align: center;
}

.button-container button {
  display: inline-block;
  width: 31%;
  margin: 0 1%;
  font-size: 30rpx;
}

.weui-cells__title {
  padding: 20rpx;
  text-align: center;
}

.weui-cell {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1px solid #ddd;
}
