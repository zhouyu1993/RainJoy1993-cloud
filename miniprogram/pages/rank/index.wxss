page, .container {
  width: 100%;
  height: 100%;
}

.main {
  width: 100%;
  height: 100%;
  text-align: center;
  background-color: #fff;
}

.tab {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #f5f5f5;
}

.tab-item {
  flex: 1;
  height: 100rpx;
}

.tab-item text {
  display: inline-block;
  min-width: 200rpx;
  max-width: 240rpx;
  font-size: 28rpx;
  line-height: 92rpx;
  white-space: nowrap;
  overflow-x: auto;
}

.tab-item text.hover {
  border-bottom: 8rpx solid #fd6fa1;
}

.rank-list {
  margin-top: 20rpx;
}

.rank-list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  padding: 0 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.lt {
  display: flex;
  align-items: center;
  width: 400rpx;
}

.avatar-image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.name-text {
  max-width: 400rpx;
  margin-left: 10rpx;
  font-size: 30rpx;
  line-height: 48rpx;
  white-space: nowrap;
  overflow-x: auto;
}

.rank-text {
  width: 80rpx;
  font-size: 26rpx;
  line-height: 48rpx;
  color: #999;
  white-space: nowrap;
  overflow-x: auto;
}

.rt {
  font-size: 26rpx;
  line-height: 48rpx;
  color: #999;
  text-align: right;
}

.rt.num {
  max-width: 150rpx;
  white-space: nowrap;
  overflow-x: auto;
}
